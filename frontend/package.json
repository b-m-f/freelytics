{
  "name": "freelytics-frontend",
  "version": "1.0.0",
  "description": "Frontend for freelytics.com",
  "author": "b-m-f",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "baseUrl=https://api.freelytics.net nuxt build",
    "start": "cross-env NODE_ENV=production baseUrl=https://api.freelytics.net node server/index.js",
    "generate": "nuxt generate"
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@hapi/hapi": "^18.3.1",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/hapi": "^2.2.1",
    "clipboard": "^2.0.4",
    "cross-env": "^5.2.0",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-module": "^0.2.1",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.6.0",
    "jest": "^24.1.0",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "tailwindcss": "^1.0.5",
    "vue-jest": "^3.0.3"
  }
}
